.main-content {
  display flex
  justify-content space-between
  //align-content baseline

  //align-items flex-start
  max-width 940px
  align-items stretch
  +do(1050px) {
    max-width 640px
  }
  +do(640px) {
    margin-top 0
    margin-bottom 0
  }
  &_news {
    align-items flex-end
    margin 21px 0
    padding 21px 0
    border-bottom 1px solid #cccccc
    border-top 1px solid #cccccc
    &:last-child {
      margin-bottom 0
    }
    +do(1050px) {
      flex-direction row
    }
    +do(640px) {
      border none
      margin 0
      padding 25px 47px
      flex-direction column
      align-items flex-start
    }
  }
  &_revers {
    +do(1050px){
      flex-direction row-reverse
    }
    +do(640px) {
      flex-direction column
    }
  }
  &__item {
    position relative
    flex 0 1 300px
    &_size-cover {
      +do(640px) {
        border-bottom 1px solid #cccccc
        padding 16px 15px
      }

      &_b1 {
        +do(640px) {
        padding 16px 15px 25px 15px
        border-bottom 1px solid #cccccc
        border-top 1px solid #cccccc
        }
      }
      &_b2 {
        +do(640px) {
          padding 25px 15px
          border none
        }

      }
    }
    &_size {
      +do(640px) {
        padding 25px 47px
        border-bottom 1px solid #cccccc
      }
    }
    &_revers {
      &:nth-child(2) {
        margin 0 5px
        +do(640px) {
          margin 0
        }
      }
      +do(1050px) {
        &:last-child {
          display none
        }
      }
      +do(640px) {
        flex 0 1 99%
        &:last-child {
          display block
        }
      }

    }

    &_long {
      flex 0 1 100%

    }
    &_border {
      padding 0 20px 22px 20px
      border 1px solid #cccccc
      margin 20px 0
      +do(640px) {
        padding 25px 47px
        border none
      }
      &_sovet {
        +do(640px) {
          border-top 1px solid #cccccc
        }
      }
      &_funny {
        +do(640px) {
          border-bottom 1px solid #cccccc
        }
      }
    }
    &_video {
      background-color #000000
      padding-top 39px
      padding-bottom 65px
      +do(640px) {
        padding-bottom 39px
      }
    }
    &_text {
      padding-top 14px
      border-bottom 5px solid #000000
      border-top 5px solid #000000
    }
  }
  &__img {
    vertical-align bottom
    transition 1s
    +do(640px) {
      width 100%
    }
    &-wr {
      position relative
      overflow hidden
      &_size {
        margin-right 25px
        flex 0 0 143px
      }
      &_video {
        +do(640px) {
          flex 0 0 147px
          max-height 82px
        }
        &:before {
          content ""
          background url("../img/content/links/links__button.png")
          height 70px
          width 70px
          position absolute
          left 50%
          top 50%
          transform translate(-50%,-50%)
          z-index 1
        }
      }
    }
  }
  &__link {
      display inline-block
    +do(640px) {
      display block
    }
    &:hover {
    .main-content__img {
      transform: scale(1.1)
      transition 1s
    }
      .main-content__title {
        &:after {
          width 100%
        }
      }
      .main-content__description {
        color $color-hover-text
      }
    }
    &_news {
      &:hover{
        .main-content__title {
          &:after {
            width 28%
          }
        }
        .main-content__description-wr_news {
          &:before {
            background url("../img/content/main-content/cat-sprites.png") -117px -10px
          }
        }
        .main-content__description {
          color $color-hover-main-content
        }
      }
    }
  }


  &__text {
    &-wr {
      display flex
      flex-direction column
      justify-content space-between
      +do(640px) {
        justify-content flex-start
      }
      &_cover {
        bottom 15%
        left 6%
        position absolute
      }
      &_video {
        margin-left 20px
        margin-top 25px
        +do(640px) {
          margin-top 0
        }
      }
    }
  }
  &__title {
    margin-bottom 20px
    margin-top 20px
    font-family "Roboto Slab",serif
    font-size 14px
    font-weight 700
    color #999999
    position relative
    text-transform uppercase
    display inline-block
    +do(640px) {
      font-size 24px
      margin-top 0

    }
    &:after {
      content ""
      display block
      height 1px
      width 36%
      background-color #000000
      position absolute
      bottom -8px
      transition 1s
    }
    &_size {
    +do(640px) {
      margin-top 0
    }
    }
    &_cover {
      margin-top 30px
      +do(640px) {
        margin-top 0
      }
      &:after {
        background-color #ff0044
      }
    }
    &_news {
     margin-top 0
    }
  }
  &__description {
    font-family "Roboto Condensed", sans-serif
    font-size 30px
    line-height 1.1
    font-weight normal
    color #000000
    +do(640px) {
      font-size 32px
    }
    &_news {
      font-size 24px
      margin-left 10px
      max-width 180px
      line-height 1.2
      +do(640px) {
        max-width 100%
        margin-left 0
        margin-bottom 17px
        font-size 32px
      }
      &_last {
        margin-bottom 0
      }
    }

    &_long {
      font-size 18px
      +do(640px) {
        font-size 32px
      }
    }
    &_video {
      color #ffffff
      line-height 1
      &-small {
        color #ffffff
        font-size 18px
        +do(640px) {
          font-size 32px
        }
      }
    }
    &_text {
      font-weight 700
      line-height 1.2
    }

    &-wr {
      &_news {
          display flex
          align-items flex-start
          font-size 48px
          font-weight normal
        &:before {
          content ""
          background url("../img/content/main-content/cat-sprites.png") -10px -10px
          height 87px
          width 87px
          display inline-block
          +do(1000px) {
            transform scale(0.5)

          }
          +do(640px) {
            display none
          }

        }
      }
    }

    &_cover {
      color #ffffff
      font-weight 700
    }

  }
  &__container {
    +do(640px) {
      display flex
      justify-content flex-start
    }

  }
}