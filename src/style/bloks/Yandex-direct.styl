.Yandex-direct {

  line-height 1.35

  &_content {
    background-color #ececec
    +do(1125px) {
      display none
    }

  }

  &__title {
      font-family "Open Sans", sans-serif
      font-size 12px
      font-weight normal
      color #999999
      &-text {
        margin-bottom 12px
        font-weight 700

      }

  }
  &__item {
      display flex
      justify-content space-between
      margin-top 10px
      //&:last-child {
      //  margin-top 22px
      //}
      &-wr {
        &_content {
          display flex
          justify-content space-between
          align-items flex-start
        }
      }
  }
  &__text-wr {
    max-width 194px
    font-family "Open Sans",sans-serif
    font-size 14px
  }
  &__text {
    &-contacts {
        font-weight 700
        margin-top 12px
        margin-bottom 16px
     }
  }
  &__link-title{
    color #000000
    &:hover {
      color #3c3c3c
    }
  }
  &__link-text {
    color #000000
    border-bottom solid 1px #000000
    &:hover {
      color #3c3c3c
    }
  }
  &__img {
    margin-right 20px
  }
}