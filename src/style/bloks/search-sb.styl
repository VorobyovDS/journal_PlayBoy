.search-sb {
  font-family "Roboto Condensed", sans-serif
  font-size 18px
  text-align left
  padding 20px
  background-color #ececec
  &__title {
    font-weight 700
    text-transform uppercase
    margin-bottom 3px
    line-height 1.2
  }
  &__text {
    margin-bottom 10px
    width 100%
  }
  &__input {
    border none
    width 162px
    &-block {
      display flex
      justify-content space-between
      width 100%

    }
    &::placeholder {
      font-family "Roboto Condensed", sans-serif
      font-size 18px

    }
    &[type="text"] {
      font-family "Roboto Condensed", sans-serif
      font-size 18px
      text-align center
      &:focus {
        outline: none
      }
      }
  }

  &__img {
    height 100%
  }
}