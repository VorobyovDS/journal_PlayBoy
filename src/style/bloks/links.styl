.links {
  margin-top 40px
  display flex
  flex-wrap wrap
  flex-direction column

  +do(800px) {
    margin-top 10px
  }
  &-wr {
    display flex
    justify-content space-between
    +do(810px) {
      flex-direction column
      align-items center
    }

  }
  //justify-content space-between
  &__item {
    //position relative
      margin-right 19px
    +do(810px) {
      margin-right 0
    }
    &:last-child {
      margin-right 0
    }

    &_special {
      display flex
      align-items center
      margin-top 14px
      margin-bottom 40px
      +do(810px) {
        display none
      }

    }
    &_block {
      display flex
      justify-content space-between
      +do(810px) {
        flex-direction column
        justify-content center
        align-items center
      }

    }
  }
  // Текст
    &__text {
      font-family "Roboto Slab",sans-serif
      font-weight 700
      font-size 24px
      color #ffffff

      &_centr-img {
        text-transform uppercase
        position absolute
        left 50%
        top 50%
        transform translate(-50%,-50%)
      }
      &_special {
        color #000000
        font-size 18px
        margin-left 10px

      }
      &_span {
        color #000000
        font-family "Roboto Condensed", sans-serif
        font-size 18px
        font-weight normal
      }
  }

  &__img {
    &-wr {
      position relative
      &:hover {
        &:after {
          content ""
          position absolute
          top 3px
          bottom 3px
          left 3px
          right 3px
          border 2px solid #ffffff
        }
      }
    }

  }
  &__link-special {
    &:hover {
      .links__text {
        color $color-hover-text
        transition .2s
      }
    }
  }
}