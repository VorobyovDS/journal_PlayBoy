.links {
  display flex
  flex-wrap wrap
  flex-direction column
  &-wr {
    display flex
    justify-content space-between
    +do(810px) {
      margin 0 15px
      flex-direction column
      align-items center
    }

  }
//justify-content space-between
  &__item {
  //position relative
    margin-right 19px
    +do(810px) {
      margin-right 0
    }
    &:last-child {
      margin-right 0
    }

    &_special {
      display flex
      align-items center
      margin-top 14px
      margin-bottom 40px
      +do(810px) {
        display none
      }

    }
    &_block {
      display flex
      justify-content space-between
      +do(810px) {
        flex-direction column
        justify-content center
        align-items center
      }

    }
    &_bt-links {
      &_img {
        &_J {
          width 100%
          max-width 610px
          height 90px
          background url("../img/content/links/links_J.png") no-repeat center
          +do(810px){
          height 150px
          margin-bottom 5px
          background url("../img/content/links/links_J-M.png") no-repeat center
          }
        }
        &_I {
          width 100%
          max-width 610px
          height 90px
          background url("../img/content/links/links_I.png") no-repeat center
          +do(810px){
            height 150px
            margin-bottom 5px
            background url("../img/content/links/links_I-M.png") no-repeat center
          }
        }
        &_G {
          width 100%
          max-width 610px
          height 90px
          background url("../img/content/links/links_G.png") no-repeat center
          +do(810px){
            height 150px
            margin-bottom 5px
            background url("../img/content/links/links_G-M.png") no-repeat center
          }
        }
    }
    }
  }
// Текст
  &__text {
    font-family "Roboto Slab",sans-serif
    font-weight 700
    font-size 24px
    color #ffffff

    &_centr-img {
      text-transform uppercase
      position absolute
      left 50%
      top 50%
      transform translate(-50%,-50%)
    }
    &_special {
      color #000000
      font-size 18px
      margin-left 10px

    }
    &_span {
      color #000000
      font-family "Roboto Condensed", sans-serif
      font-size 18px
      font-weight normal
    }
  }

  &__img {
    &-wr {
      width 100%
      height 100%
      position relative
      &:hover {
        &:after {
          content ""
          position absolute
          top 3px
          bottom 3px
          left 3px
          right 3px
          border 2px solid #ffffff
        }
      }
    }
    &_bt-links {
      width 100%
    }
  }
  &__link {
    &_special {
      &:hover {
        .links__text {
          color $color-hover-text
          transition .2s
        }
      }
    }
  }
}