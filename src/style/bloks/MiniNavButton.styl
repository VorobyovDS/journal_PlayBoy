


.MiniNavButton {
  position relative
  display block
  left -15px
  margin-right auto
  +do(1290px) {
    left 0
  }
  &__trigger {
    vertical-align bottom
    display inline-block
    bottom: 50px;
    right: 5%;
    width: 90px;
    height: 90px;
    background: #ffffff;
    /* image replacement */
    overflow: hidden;
    text-indent: 100%;
    white-space: nowrap;
    z-index: 2;
    &_menu-is-open {
      background-color #000000
      box-shadow: none;
      border-top 2px solid $color-border-menu
      border-left 2px solid $color-border-menu
      border-right 2px solid $color-border-menu
      span {                  //!!!!!!!!!!!
          &:before,&:after {
            background: $color-border-menu;
          }
          &:before {
            top 0
            transform rotate(135deg)
          }
          &:after {
            bottom: 0
            transform: rotate(225deg)
          }
      }
    }
  }
  &__list {
    box-sizing border-box
    position absolute
    top 92px
    left -15px
    width 100%
    //max-width 90%
   // box-shadow: 0 0 10px rgba(232, 74, 100, 0.4)
    visibility hidden;
    overflow hidden
    backface-visibility hidden
    transform scale(0)
    transform-origin 0% 0%
    background-color #000000
    //transition transform 0.3s, visibility 0s 0.3s
    border-left solid 2px $color-border-menu
    border-bottom  solid 2px $color-border-menu
    border-right   solid 2px $color-border-menu
    z-index 999
    +do(1290px) {
      left 0
    }
    +do(640px){
      width 100%
    }
    &-lvl-wr {
      display flex
      flex-wrap wrap
      //justify-content space-around
      +do(640px) {
      flex-direction column
      }
    }
    &_is-visible {
      visibility visible
      transform scale(1)
      transition transform 0.3s, visibility 0s 0s
    }

  }
  &__item {
    backface-visibility hidden
    color #ffffff
    font-family "Roboto Condensed", sans-serif
    font-weight 300
    font-size 36px
    text-align left
    margin-left 40px
    margin-bottom 20px
    +do(640px) {
      margin-bottom 46px
      padding 0 0 0 14%
    }
    &_title {
      font-family "Roboto Slab",sans-serif
      font-weight 700
    }

    &_avatar {
      position relative
      display flex
      justify-content flex-start
      align-items center
      padding-top 75px
      padding-bottom 75px
      &:after {
        position absolute
        bottom 0
        left 50%
        transform translateX(-50%)
        content ""
        height 1px
        width 98%
        background-color #666666
      }
    }
  }
  &__link {
      display: inline-block;
      position relative
      text-decoration none
      color #ffffff
      &:after {
        position absolute
        content ""
        display block
        height 2px
        width 0%
        left 50%
        bottom -10px
        transform translateX(-50%)
        transition width .3s ease-in-out
        background-color white
      }
    &:hover {
      &:after {
        width 100%
      }
    }
    &_avatar {
      &:after {
        display none
      }
    }
    &_Color-CyberClub {
      color #1bd9cb
    }
  }
  &__icon {
    position: absolute;
    display: block;
    width: 60px;
    height: 3px;
    background: #000000;
    top: 48%;
    margin-top: -1px;
    left: 50%;
    margin-left: -30px;
    transition: background 0.3s;
    &:before, &:after {
      content: '';
      position: absolute;
      left: 0;
      background: inherit;
      width: 60px;
      height: 100%;
      /* Force Hardware Acceleration in WebKit */
      transform: translateZ(0);
      backface-visibility: hidden;
      transition: transform 0.3s, background 0s;
    }
      &:before {
      top: -12px;
      transform: rotate(0);
    }
      &:after {
      bottom: -12px;
      transform: rotate(0);
    }
    &_is-visible {
      background: #ffffff;
      margin-left: -23.5px;
      width 0
      &:before, &:after {
        content: '';
        position: absolute;
        left: 0;
        width: 47px;
        height: 100%;
        /* Force Hardware Acceleration in WebKit */
        transform: translateZ(0);
        backface-visibility: hidden;
        transition: transform 0.3s, background 0s;
      }
      &:before {
        top: 0;
        transform: rotate(45deg)
      }
      &:after {
        bottom: 0;
        transform: rotate(-45deg);
      }
    }
  }
  &__avatar {
    height 100px
    width 100px

  }
  &__text {
    margin-left 38px
  }
  &__list-lvl-item {
    &_news {
      order 1
      +do(640px) {
      order 0
      }
    }
  }
}