.search {
  input {
    position absolute
    right 0
    bottom 0
  }
  input[type=search] {
    background: #ffffff url(../img/header/MiniNavButton/Magnifier.png) no-repeat left;
  //border: solid 1px #ccc;
    padding: 0 54px;
    height 100%
  //width: 50px;
    transition: width .5s;
    Border: none;
    outline: none;
    width: 18px;
    padding-left: 10px;
    color: transparent;
    cursor: pointer;
    &:focus {
      width: 80%
      max-width 400px
      background: #c57eff url(../img/header/MiniNavButton/MagnifierWhite.png) no-repeat left;
      cursor: auto;
      padding-left: 10px;
      color: #ffffff;
      background-color: #000000;
      font-family "Roboto Condensed",sans-serif
      font-size 24px
      text-align center
    //background-color: #fff;
    // border-color: #6dcff6;
    // box-shadow: 0 0 5px rgba(109,207,246,.5);
    }
  }

}