.vk {
  max-width 302px
  font-family "Tahoma", sans-serif
  font-weight 700
  &__title {
    margin-left 12px
    font-size 11px

    color #ffffff
    &-wr {
      display flex
      align-items center
      background-color #3c3c3c
      padding 10px 12px
    }
  }
  &__icon {
    display flex
    justify-content center
    align-items center
    font-size 21px

    color #000
    height 31px
    width 31px
    background-color #ffffff
    &_b {
      margin-left auto
    }
  }
  &__header {
    margin-top 30px
    margin-bottom 20px
  }
  &__social {
    display flex
    flex-direction column
    align-items center
  }
  &__people {
    padding-bottom 23px
  }
  &__item {
    display flex
    justify-content space-between
    padding 0 14px
  }
  &__subscribe {
    background-color #202020
    color #ffffff
    width 100%
    text-align center
    padding-bottom 22px
    padding-top 16px
    &:hover {
      background-color #5c5c5c
    }
  }
  &__link {
    &_bg {
      width 100%
    }

  }
}
