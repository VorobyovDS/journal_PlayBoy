.footer {

  background-color #000000
  +do(640px) {
    padding-bottom 41px
  }
  &__wrapper {
    margin 0 auto
    max-width 1260px
    padding 0 4%
    display flex
    justify-content space-between
  }
  &__magazine {
    margin-top 50px
    +do(944px) {
      margin-left 40px
      transition .3s
    }
    +do(961px) {
      margin-left 20px
      transition .3s
    }
    +do(945px) {
      margin-left 10px
      transition .3s
    }
    +do(800px) {
      display none
    }
  }
  &__sidebar {
    display flex
    flex-direction column
    align-items flex-end
    margin-right 36px
    //justify-content space-between
  }
  &__digital-magazine {
    margin-top 20px
    margin-right 20px
  }
}

