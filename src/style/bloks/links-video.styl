.links-video {
  display flex
  flex-direction column
  justify-content center
  background-color #000000
  +do(810px) {
    min-height 420px
  }
  +do(640px) {
    margin 0 15px
  }
  +do(380px) {
    margin 0
  }
  &__img-video {
    vertical-align bottom
    &-wr {
      overflow hidden
      display inline-block
      position relative
      bottom 0
    }
  }
  &__img-link {
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    &:hover {
      left 50%
      top 50%
      transform translate(-50%,-50%) scale(1.2)
    }
  }
  &__img {
    vertical-align bottom
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    transition 0.5s
  }
  &__link {
    transition 0.3s
    &:after {
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      content ""
      z-index 200
    }
    &:hover {
      .links-video__img {
        left 50%
        top 50%
        transform translate(-50%,-50%) scale(1.2)
        transition 0.5s
      }
      .Title-links__header {
          color #ffffff
          &:after {
            transition 1s
            width 100%
          }
      }
      .Title-links__title-description {
        margin-left 20px
        transform scale(1.2)
        transition 0.3s
        color $color-hover
        +do(640px) {
          transform none
          margin-left 0
        }
      }


    }
  }
}